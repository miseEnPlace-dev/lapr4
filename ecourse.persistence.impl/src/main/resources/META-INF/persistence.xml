    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:h2:tcp://localhost/~/ecourse" />
      <!--
			<property name="javax.persistence.jdbc.url"
      value="jdbc:h2:~/ecourse;MV_STORE=FALSE;AUTO_SERVER=true;" />
